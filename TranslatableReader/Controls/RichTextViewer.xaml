<UserControl
    x:Class="TranslatableReader.Controls.RichTextViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TranslatableReader.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    d:DesignHeight="300"
    d:DesignWidth="400">
	<ListView  x:Name="TextViewerListContainer" SelectionMode="None" IsDoubleTapEnabled="False" IsItemClickEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" CompositeMode="Inherit" IsMultiSelectCheckBoxEnabled="False" ShowsScrollingPlaceholders="False">
		<ListView.ItemTemplate>
			<DataTemplate>
				<RichTextBlock IsTextSelectionEnabled="True" local:RichTextBlockHelper.Blocks="{Binding}"></RichTextBlock>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
</UserControl>